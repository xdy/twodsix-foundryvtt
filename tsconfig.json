{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "types": ["jquery", "@league-of-foundry-developers/foundry-vtt-types", "@types/fs-extra"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
//    "strict": true,
    "sourceMap": true,
    "allowUmdGlobalAccess": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "removeComments": false,
    "resolveJsonModule": true,
    "typeRoots": ["./types"],
    "alwaysStrict": true
  },
  "include": ["src"]
}
