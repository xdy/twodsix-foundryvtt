<div class="ship-finances-container">
  <div>
    <div class="ship-financial-notes">
      <span class="item-title">{{localize "TWODSIX.Ship.FINANCENOTES"}}</span>
      {{#if settings.useProseMirror}}
      <prose-mirror name="system.financeNotes" data-document-u-u-i-d="{{actor.uuid}}" value="{{system.financeNotes}}" collaborate="true" toggled="true">
        {{{richText.financeNotes}}}
      </prose-mirror>
      {{else}}
        <div contenteditable="true" data-edit="system.financeNotes">{{#if actor.system.financeNotes}}{{{actor.system.financeNotes}}}{{/if}}</div>
      {{/if}}
    </div>
    <div class="ship-common-funds">
      <span class="item-title">{{localize "TWODSIX.Ship.COMMONFUNDS"}}</span>
      {{#if settings.useMCr}}
        <span class="ship-commonFunds"><input type="number" value="{{actor.system.commonFunds}}" name="system.commonFunds" /> {{localize "TWODSIX.Ship.MCr"}}</span>
      {{else}}
        <span class="ship-commonFunds"><input type="number" value="{{actor.system.financeValues.cash}}" name="system.financeValues.cash" /></span>
      {{/if}}
    </div>
  </div>
  <div class="financial-calcs">
    <span class="item-title">{{localize "TWODSIX.Ship.SHIPVALUE"}}</span>
    <div class="ship-value">
      <span class="ship-stat-finance">{{localize "TWODSIX.Ship.IsMassProduced"}}:<input type="checkbox" class="checkbox" name="system.isMassProduced" {{checked actor.system.isMassProduced}} data-dtype="Boolean" /></span>
      <span class="ship-stat-finance" >{{localize "TWODSIX.Ship.MassProductionDiscount"}}:<input type="number" value="{{actor.system.financeValues.massProductionDiscount}}" name="system.financeValues.massProductionDiscount" {{#unless actor.system.isMassProduced}}disabled{{/unless}}/></span>
      <span class="ship-stat-finance">{{localize "TWODSIX.Ship.ShipValue"}}:<input {{#if settings.useShipAutoCalc}}readonly{{/if}} type="text" value="{{actor.system.shipValue}}" name="system.shipValue" /> {{localize "TWODSIX.Ship.MCr"}}</span>
      <span class="ship-stat-finance">{{localize "TWODSIX.Ship.MortgageTerm"}}:<input type="number" value="{{actor.system.financeValues.mortgagePaymentTerm}}" name="system.financeValues.mortgagePaymentTerm" /> {{localize "TWODSIX.Ship.Months"}}</span>
      <span class="ship-stat-finance">{{localize "TWODSIX.Ship.MortgagePerMonth"}}:<input {{#if settings.useShipAutoCalc}}readonly{{/if}} type="text" value="{{actor.system.mortgageCost}}" name="system.mortgageCost" /> {{localize "TWODSIX.Ship.CrPerMonth"}}</span>
      <span class="ship-stat-finance">{{localize "TWODSIX.Ship.MaintenancePerMonth"}}:<input {{#if settings.useShipAutoCalc}}readonly{{/if}} type="text" value="{{actor.system.maintenanceCost}}" name="system.maintenanceCost" /> {{localize "TWODSIX.Ship.CrPerMonth"}}</span>
      </div>
  </div>
</div>
